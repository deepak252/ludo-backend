{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",

    "baseUrl": "./src",
    // "paths": {
    //   "@/*": ["*"]
    // },

    "typeRoots": ["./node_modules/@types", "./src/types/types"]
  },

  "exclude": ["node_modules/"],
  "include": ["./src/**/*", "./src/**/*.json"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
