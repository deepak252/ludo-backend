{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "rootDir": "src",
    "outDir": "dist",

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "typeRoots": ["./node_modules/@types", "./src/types/types"]
  },

  "exclude": ["node_modules/"],
  "include": ["./src/**/*", "./src/**/*.json"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
