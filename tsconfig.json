{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",

    "noEmit": false,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "strict": false,

    "typeRoots": ["./node_modules/@types", "./src/types/types"]
  },

  "exclude": ["node_modules/"],
  "include": ["./src/**/*", "./src/**/*.json", "global.d.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
