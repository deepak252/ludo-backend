{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "rootDir": "src",
    "outDir": "dist"
  },

  "exclude": ["node_modules/"],
  "include": ["src/**/*.ts"]
}
